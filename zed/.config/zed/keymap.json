[
  {
    "context": "Editor && VimControl && !VimWaiting && !menu",
    "bindings": {
      // Moves
      "ctrl-j": "editor::HalfPageDown",
      "ctrl-k": "editor::HalfPageUp",
      "ctrl-h": ["workspace::ActivatePaneInDirection", "Left"],
      "ctrl-l": ["workspace::ActivatePaneInDirection", "Right"],
      // Leader actions
      "space space": "command_palette::Toggle",
      "space w": "workspace::Save",
      "space a t": "terminal_panel::ToggleFocus",
      "space p": "file_finder::Toggle",
      // "space b": "RecentFiles shortcut not available"
      "space t r": "task::Rerun",
      "space t n": "task::Spawn",
      "space r": "editor::Rename",
      "space h u": "editor::RevertSelectedHunks",
      // Go to actions
      "g f": "pane::DeploySearch",
      "g k": "workspace::ActivateNextPane",
      "g i": "editor::GoToImplementation",
      "g r": "editor::FindAllReferences",
      "g s": "project_symbols::Toggle",
      "g a": "editor::ToggleCodeActions",
      "g e": "editor::GoToDiagnostic",
      "g p": "file_finder::Toggle"
    }
  },
  {
    "context": "Terminal",
    "bindings": {
      "space space space": "pane::CloseAllItems"
    }
  }
]
